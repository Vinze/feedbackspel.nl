<!DOCTYPE html>
<html lang="nl">
<head>
	<% include includes/head %>
		<style type="text/css">
		.kernkwadranten {
			background: transparent url('/img/bg-kernkwadranten.png') top left no-repeat;
			width: 902px;
			height: 502px;
			margin: 30px auto;
			position: relative;
		}
		.box-1,
		.box-2,
		.box-3,
		.box-4 {
			position: absolute;
			width: 400px;
			height: 200px;
			padding: 20px 30px 0 30px;
		}
		.box-1 { top: 3px; left: 0; }
		.box-2 { top: 3px; right: 2px; }
		.box-3 { bottom: 0; left: 0; }
		.box-4 { bottom: 0; right: 2px; }
		</style>
</head>
<body>
	<% include includes/top %>
	<div class="content-wrapper">
		<div class="kernkwadranten"  id="content"></div>
	</div>
	<% include includes/bottom %>
	
	<script type="text/template" id="template">
		<div class="box-1">
			<h3>Kernkwaliteit</h3>
			<p>
				<select name="selected" value="{{selected}}" class="select">
					{{#each kernkwadranten:i}}
						<option value="{{i}}">{{ucfirst(kwaliteit.naam)}}</option>
					{{/each}}
				</select>
			</p>
			<p>{{kernkwadranten[selected].kwaliteit.omschrijving}}</p>
		</div>

		<div class="box-2">
			<h3>Valkuil</h3>
			<p>
				<select name="selected" value="{{selected}}" class="select">
					{{#each kernkwadranten:i}}
						<option value="{{i}}">{{ucfirst(valkuil.naam)}}</option>
					{{/each}}
				</select>
			</p>
			<p>{{kernkwadranten[selected].valkuil.omschrijving}}</p>
		</div>

		<div class="box-3">
			<h3>Allergie</h3>
			<p>
				<select name="selected" value="{{selected}}" class="select">
					{{#each kernkwadranten:i}}
						<option value="{{i}}">{{ucfirst(allergie.naam)}}</option>
					{{/each}}
				</select>
			</p>
			<p>{{kernkwadranten[selected].allergie.omschrijving}}</p>
		</div>

		<div class="box-4">
			<h3>Uitdaging</h3>
			<p>
				<select name="selected" value="{{selected}}" class="select">
					{{#each kernkwadranten:i}}
						<option value="{{i}}">{{ucfirst(uitdaging.naam)}}</option>
					{{/each}}
				</select>
			</p>
			<p>{{kernkwadranten[selected].uitdaging.omschrijving}}</p>
		</div>
	</script>
	<script type="text/javascript" src="/js/kernkwadranten.js"></script>
</body>
</html>