extends ../layout/base
block content
	div.row
		div.col.span-4.offset-4
			h1 Inloggen
			form(method="POST", action="/login", accept-charset="UTF-8")
				div.row.fg
					div.col.span-12
						label(for="email") E-mail adres:
						input(name="email", type="text", value="", id="email")
				div.row.fg
					div.col.span-12
						label(for="password") Wachtwoord:
						input(name="password", type="password", id="password")
				div.row.fg
					div.col.span-12
						label
							<input checked="checked" name="remember" type="checkbox" value="1"> Ingelogd blijven
				div.row.fg
					div.col.span-12
						button(type="submit", class="btn-confirm") Inloggen