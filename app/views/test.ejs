
<!DOCTYPE html>
<html lang="nl">
<head>
	<% include includes/head %>
</head>
<body>
	<div class="header-wrapper">
		<div class="container">
			<a href="/" class="logo"><img src="/img/badge.svg"></a>
		</div>
	</div>
	<div class="site-wrapper">
		<div class="content-wrapper">
			<div class="content container" id="content"></div>
		</div>
		<div class="footer-wrapper">
			<% include includes/footer %>
		</div>
	</div>

	<script type="text/template" id="template">
		<div class="row section">
			<div class="col span-6 box">
				<h2>Kernkwaliteit</h2>
				<p>
					<select name="selected" value="{{selected}}" class="select">
						{{#each kernkwadranten:i}}
							<option value="{{i}}">{{ucfirst(kwaliteit.naam)}}</option>
						{{/each}}
					</select>
				</p>
				<p>{{kernkwadranten[selected].kwaliteit.omschrijving}}</p>
			</div>
			<div class="col span-6 box">
				<h2>Valkuil</h2>
				<p>
					<select name="selected" value="{{selected}}" class="select">
						{{#each kernkwadranten:i}}
							<option value="{{i}}">{{ucfirst(valkuil.naam)}}</option>
						{{/each}}
					</select>
				</p>
				<p>{{kernkwadranten[selected].valkuil.omschrijving}}</p>
			</div>
		</div>
		<div class="row">
			<div class="col span-6 box">
				<h2>Allergie</h2>
				<p>
					<select name="selected" value="{{selected}}" class="select">
						{{#each kernkwadranten:i}}
							<option value="{{i}}">{{ucfirst(allergie.naam)}}</option>
						{{/each}}
					</select>
				</p>
				<p>{{kernkwadranten[selected].allergie.omschrijving}}</p>
			</div>
			<div class="col span-6 box">
				<h2>Uitdaging</h2>
				<p>
					<select name="selected" value="{{selected}}" class="select">
						{{#each kernkwadranten:i}}
							<option value="{{i}}">{{ucfirst(uitdaging.naam)}}</option>
						{{/each}}
					</select>
				</p>
				<p>{{kernkwadranten[selected].uitdaging.omschrijving}}</p>
			</div>
		</div>

	</script>
	
	<script type="text/javascript" src="/js/kernkwadranten.js"></script>
	<script type="text/javascript" src="/js/libs/ractive.min.js"></script>
	<script type="text/javascript">

		var ractive = new Ractive({
			el: 'content',
			template: '#template',
			data: {
				kernkwadranten: kernkwadranten,
				selected: 1,
				ucfirst: function(value) {
					return value.charAt(0).toUpperCase() + value.slice(1);
				}
			}
		});

		// ractive.on({
		// 	setKwaliteit: function(evt) {
		// 		console.log(ractive.get('kwaliteit'));
		// 	}
		// });

		// ractive.observe('selected', function(new_val, old_val, keypath) {
		// 	ractive.set('selected', new_val);
		// });
	</script>
	
</body>
</html>
